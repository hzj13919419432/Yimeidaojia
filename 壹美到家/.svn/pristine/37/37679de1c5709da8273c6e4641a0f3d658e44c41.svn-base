@charset "utf-8";
*{
    padding: 0;
    margin:0 auto;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    color: #000;
}
body{
    background-color:#fff;
}
header{
    padding-top:20px;
    position: fixed !important;
    top:0;
}
header a{
    color:gray !important;
    padding:0 1rem !important;
}
header a span{
    color:gray !important;
}
.product-title{
  color: #000;
  font-weight: 700;
}
.product-desc{
  color: #bdbdbd;
}
.product-price{
  font-weight: 700;
  font-size: 14px;
}
.aui-bar-nav {
    background-color:rgba(0,0,0,0.1) !important;
}
.aui-list-item-inner{
    padding:15px 15px;
}
.aui-list-item-text div{
    margin-top:5px;
}
.aui-card-list {
    margin-bottom:0 !important;
}
.aui-row div{
    font-size:12px;
    color:gray;
}
.aui-col-xs-3{
    font-size:14px !important;
    color:red !important;
}
.aui-col-xs-5{
    text-decoration: line-through;
}
.aui-card-list-footer{
    margin-bottom:60px;
    color:#000;
}
.aui-content {
    margin-bottom:50px;
}
.texts{
    width:100%;
    text-align: center;
    padding:20px 10px 0 10px;
    font-weight: bold !important;
    border-top:1px solid #ddd;
}
footer{
    position: fixed !important;
    bottom:0;left:0;
    width:100%;
    background-color: #fff;
    z-index: 10;
}
footer div p{
    text-align: center;
    margin-bottom:5px;
}
footer .aui-col-xs-2{
    background-color:#ececec;
}
footer .aui-col-xs-2 img{
    width:20px;
    margin:4px 22px 0;
}
footer .aui-col-xs-3{
    height:50px;
    line-height:55px;
    background-color: #ffb04a;
    text-align: center;
    color:#fff !important;
}
footer .black{
    background-color: #000 !important;
}
.aui-bar-nav .aui-iconfont {
    font-size: 1.1rem;
}
.aui-card-list-content-padded {
    position: relative;
    padding: 0.5rem 0rem;
}
#bottom-right{
    margin-bottom:45px; 
}
.aui-mask {
    position: fixed;
    width: 100%;
    height:100%;
    padding-bottom:50px; 
}
.aui-popup-bottom-right {
    right: 0rem;
}
#bottom-right{
    width:100%;
}
#bottom-right li .aui-list-item-label-icon{
    padding:10px 0;
    width:100px;
}
#bottom-right li img{
    width:100px;
}
#bottom-right li .aui-row{
    width:100%; 
}
#bottom-right .aui-row *{
    font-size:14px; 
}
#bottom-right .aui-row .aui-col-xs-10{
    color:red;
    margin-bottom: 10px;
}
#bottom-right .aui-list .aui-list-item {
    border: none;
    background-size: 100% 0px;
}
#bottom-right .aui-bar {
    height: 25px;
}

.aui-popup-bottom-right .aui-popup-arrow {
    right: 2.25rem;
}