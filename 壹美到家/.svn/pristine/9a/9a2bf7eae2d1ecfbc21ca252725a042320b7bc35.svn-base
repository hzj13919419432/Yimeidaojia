*{
    padding: 0;
    margin:0 auto;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    font-size: 12px;
}
body{
  background: #fff;
  font-size: 12px;
}
.classhead{
  margin-top:20px;
  position: absolute;
  top:0px;
  left: 0px;
  padding:10px;
  background: #161616;
}
.classhead.aui-bar-nav.aui-bar-light .aui-iconfont ,.classhead .aui-title{
    color:#fff;
    font-size: 16px;
}

.classhead.aui-bar.aui-bar-light {
    background-size: 100% 0px;
}
header .publish-btn{
  font-size: 14px !important;
}
main>div{
    position: relative;
}
main .ptext{
  width: 94%;
  margin: 0 auto;
  margin-top:110px;
  height: 200px;
  background:#F2F2F2;
  padding-top:15px;
  font-size: 12px;
}
main .num{
  position: absolute;
  right: 20px;
  bottom: 5px;
}
.addpic{
  width: 80px;
  height: 80px;
  border:1px dashed #ccc;
  margin-left:10px;
  margin-top:10px;
  text-align: center;
}
.addpic p{
  font-size: 12px !important;
}
.addpic img{
  width: 30%;
  margin: 10px auto;
  margin-bottom: 20px;
}
