@charset "utf-8";
*{
    padding: 0;
    margin:0 auto;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    color: #000;
    font-size: 12px;
}
body{
	background-color: #fff;
}
header{
  width: 100%;
  height: 130px !important;
  background-color: #000 !important;
}
header aside{
  margin-top: 20px;
}
header .left-icon-c,header .right-icon-c{
  margin-left: 30px !important;
  margin-right: 30px !important;
  width: 24px;
  height: 24px;
  overflow: hidden;
}
header .left-icon-c img,header .right-icon-c img{
  width: 100%;
  height: 100%;
}
section{
	background-color: #fff;
	width: 100%;
	position: relative;
	top:0;
	border-radius: 15px 15px 0 0;
	margin: 0 auto;
	z-index: 999;
}
section .user_info{
	width: 100%;
	position: relative;
	top:-30px !important;
}
section .user_info>div{
	width: 120px;
	height: 120px;
	margin: 0 auto;
	text-align: center;
}
section .user_info .user_img{
	width: 64px;
	height: 64px;
	overflow: hidden;
	border: 3px solid #fff;
	border-radius: 50%;
	margin: 0 auto;
	overflow: hidden;
}
section .user_info .user_img img{
	width: 100%;
	height: 100%;
}
section .user_info .user_nickname{
	margin-top: 8px;
	color: #262626;
	font-size: 14px;
}

section .order-menu,section .service-menu{
	position: relative;
	top:-50px;
	padding-left: 18px;
	padding-right: 18px;
	overflow: hidden;
}
section .order-menu .menu-title,section .service-menu .menu-title{
	overflow: hidden;
	margin-bottom: 22px;
}
section .order-menu .my-order,section .service-menu .my-service{
	font-size: 16px;
	font-weight: 600;
	float: left;
}
section .service-menu .my-service{
  margin-top: 25px;
}
section .service-menu{
  border-bottom: 0;
}
section .order-menu .all-order{
	font-size: 12px;
	color: #9C9C9C;
	float: right;
}
.order-menu .order-menu-contenet .order-menu-contenet-i,.service-menu .service-menu-contenet .service-menu-contenet-i{
	overflow: hidden;
	margin-bottom: 18px;
}
.order-menu .order-menu-contenet .order-menu-contenet-i .menu-item,.service-menu .service-menu-contenet .service-menu-contenet-i .menu-item{
	width: 25%;
	float: left;
	margin: 0 auto;
	text-align: center;
	overflow: hidden;
}
.order-menu .order-menu-contenet .order-menu-contenet-i .menu-item .menu-item-icon,.service-menu .service-menu-contenet .service-menu-contenet-i .menu-item .menu-item-icon{
	width: 24px;
	height: 24px;
	overflow: hidden;
	margin: 0 auto;
	margin-bottom: 10px;
}
.order-menu .order-menu-contenet .order-menu-contenet-i .menu-item img{
	width: 100%;
	height: 100%;
}
