.activelist ul li>div{
  margin:20px;
}
.activelist ul li .tpic{
  width:90%;
  height: 160px;
  margin: 10px auto;
  border-radius: 10px;
  overflow: hidden;
}
.activelist ul  .tpic>img{
  width: 100%;
  height: 100%;
}

.activelist li{
  border:1px solid #e5e5e5;

}
.activelist .title{
  position: relative;
}
.activelist .title .left{
  border-right: 1px solid #000;
  padding-right: 5px;

}
.activelist .title p{
  margin: 5px 0px;
}

.activelist .join{
  position: absolute;
  bottom: 10px;
  right: 10px;
  width: 70px;
  height: 25px;
  background: #ebebeb;
  border-radius: 20px;
  text-align: center;
  line-height: 25px;
  color:#a37532;
}
