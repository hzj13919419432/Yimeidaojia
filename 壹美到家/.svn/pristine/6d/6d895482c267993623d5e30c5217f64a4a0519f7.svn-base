@charset "utf-8";
*{
	color: #000;
}
html{
	width: 100%;
	height: 100%;
	font-size: 16px;
}

body{
	font-size: 16px;
}
header.aui-bar.aui-bar-nav{
	background-color: #000;
	font-size: 1.2rem;

}

 .aui-bar-nav .aui-title {
   
    left: 5rem;
   
    margin-top:20px;
}
header>div{
	margin-top: 20px;

}
header div.aui-title{
	letter-spacing: 0.2em;


}
.aui-bar-nav .aui-iconfont{
	color: #fff;
	margin-left: 10px;
	margin-top: 2px;
}
.aui-bar-nav #head-right{
	text-align: right;
	margin-right: 15px;
	margin-top: 6px;
	font-size:0.9em;
	letter-spacing: 0.2em;
}

header div.aui-title {

    color: #fff;
}
header div.aui-title span{
	color: #fff;
   
}


section .del img{
	width: 45%;
	margin-left: 50%;
	
}


section .aui-card-list{
	margin-bottom: 0;
}
section .shop-info-left{
	padding-left: 1em;
	font-size: 0.6rem;
}
section .shop-info-right{
	text-align: right;
}

section .myprice{
	margin-top:2vw; 
}
section .price{
	color: red;
}
section .num{
	margin-right: .5rem;
}
.del-btn{
	width:3.8em;
	height: 28px;
	line-height: 28px;
	margin:10px 15px 0 0;
	background-color: transparent;
	border:1px solid red;
	border-radius: 8%;
	letter-spacing: 0.3em;
}
.shop-num{
	color:#ccc;
}
.split-hr{
	background-color: #eee;
	height:1px;
	size: 1px;
	width:90%;
	margin-left:10%;
}
.shop-check-item{
	margin-top: 50%;
}
section .aui-card-list-footer{
	display:inline-block;
	width:100%;
	text-align: right;
	margin-right: 15px;
}
footer{
	width: 100%;
	height:50px;
	position: fixed;
	bottom: 0;
	border-top: 1px solid #ececec;
	font-size: 0.8em;
	overflow: hidden;
	display: flex;
	background-color:#fff;
}
footer>div{
	flex: 1;
	text-align: center;
	line-height: 50px;
}
#selectAll{
	margin-top: 15px;
	margin-right: .2em;
}
footer .count{
	background-color: #f58a20;
	color: #fff;
}

footer .mycheck{
	text-align: left;
	margin-left: 2vw;
}
#balance{
	color: rgba(255, 255, 255, 0.9);
}
.aui-toast{
	background-color: #ccc;
	border: 1px solid #666;
	color: #000;
} 

.aui-radio, .aui-checkbox {
    width: 1rem;
    height: 1rem;
  
}

.aui-card-list-content-padded {
  
    border-bottom: 1px solid #ececec;
}