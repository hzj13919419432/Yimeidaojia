@charset "utf-8";
body{
	width: 100%;
	height: 100%;
	background-image: url(../../image/user/distsale/img_bg@3x.png);
}
body>header{
	margin-top: 50px;
	color: #fff;
}
body>section{
	width: 80%;
	height: 480px;
	margin: 0 auto;
	background-color: #fff;
	border-radius: 4px;
	margin-top: 20px;
	position: relative;
}
	body>section>div>img{
		width: 68px;
		height: 68px;
		border-radius: 50%;
		position: relative;
		margin: 0 auto;
		position: relative;
		top: -40px;
		background-repeat: no-repeat;
	}
	#userInfo{
		position: absolute;
	}
	body>section>div>span#name{
		display: inline-block;
		width: 100%;
		height: 100%;
		text-align: center;
		color: #FF7256;
		position: relative;
		top: -30px;
		font-size: 1.2em;
	}

	body>section>div>div>span{
		display: inline-block;
		width: 100%;
		padding: 5px;
		text-align: center;
		font-size: 0.8em;
		color: #666;
	}
	#userInfo strong{
		position: relative;
		top: -10px;
	}
	body>section>div>div#info1,body>section>div>div#info2,body>section>div>div#qrcode{
		margin-top: 7px;
	}
	body>section>div>div#qrcode>img{
		width: 120px;
		height: 120px;
		margin: 0 auto;
	}
	body>section>div>div#qrcode>span{
		margin-top: 8px;
	}
footer:after{
	content: "";
	font-weight: bold;
	background-color: #fff;
	position: absolute;
	font-size: 3em;
	width: 30%;
	height: 3px;
	left: 35%;
	bottom: -20px;
	border-radius: 1px;
	margin-top: 20px;
}
.aui-list{
    background-size: 100% 0px;
}
.aui-list .aui-list-item {
    background-size: 100% 0px;
}
.aui-bar {
    height: 30px;
}

.aui-list .aui-list-item-media {
	width: 3.5rem;
}

.aui-list .aui-list-item-text {
	font-size:12px;
}
.aui-font-size-14 {
    font-size:18px !important;
}