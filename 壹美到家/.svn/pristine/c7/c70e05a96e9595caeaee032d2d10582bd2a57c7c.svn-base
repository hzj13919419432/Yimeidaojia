*{
    padding: 0;
    margin:0 auto;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;

}
body{
  background: #fff;
  font-size: 12px;
}
h3{
  margin-top:10px;
  font-size: 14px;
}
p{
  font-size: 12px;
}
.head{
  background: #181818;
}
.head>div{
  color:#fff;
  background: #181818;
}
.head .aui-tab-item {
  color:#855f2b;
}
.head .aui-tab-item.aui-active {
    color: #a37532;
    font-size: 16px;
    border-bottom: 2px solid #a37532;
}
.head .aui-tab-item.aui-active::before{
  width: 25px !important;
}
.showlist li{
  overflow: hidden;

}
.showlist li>div{
  float:left;
}
.headpic{
  width: 60px;
  height: 60px;
  margin-left: 10px;
  margin-top: 20px;
}

.headpic img{
  width: 48px;
  height: 48px;
  border-radius: 50%;
}

.con{
  width: 70%;
  height: 100%;
  margin-left: 5px;
  margin-top:20px;
}
.con h3{
  font-size: 14px;
  margin-bottom: 10px;
}

.piclist.aui-grid [class*=aui-col-] {
    display: table-cell;
    position: relative;
    text-align: center;
    vertical-align: middle;
    padding:  0px 2px;
}
.tcom{
  width: 100%;
  height: 60px;

}
.tcom .time{
  float: left;

}
.tcom .comment{
  float: right;
  width: 24px;
  height: 24px;
}
.tcom .comment img{
width: 100%;
}

.publish{
  position: fixed;
  bottom: 10px;
  right: 20px;
  width: 80px;
  height: 40px;
  text-align: center;
  background: #181818;
  color:#fff;
  border-radius: 20px;
}

.publish>div{
  float: left;
font-size: 14px;
line-height: 40px;
  padding-left: 5px;
}
.ppic{
  width: 32px;
  padding-top:5px;

}
