@@charset "UTF-8";
*{
    padding: 0;
    margin:0 auto;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    font-size: 12px;
    background: #fff;
}
body{
  background: #fff;
}
.head{
  background: #181818;
}
.head>div{
  color:#fff;
  background: #181818;
}

.head .aui-tab-item {
  color:#855f2b;
  font-size: 14px;
}

.head .aui-tab-item.aui-active {
    color: #a37532;
    font-size: 16px;
    border-bottom: 2px solid #a37532;

}
section{
  margin-left: 10px;
  background-color: #fff;
}
section .lesson-list{
  margin-top: 20px;
}
section .lesson-list-title{
  padding-left: 8px;
  border-left: 2px solid #313131;
}
section .list-title-zh{
  font-size: 12px;
  font-weight: 500;
}
section .list-title-en{
  font-size: 12px;
  font-weight: 600;
}
section .lesson-list-content{
  overflow-x: scroll;
  margin-top: 20px;
  margin-bottom: 50px;
}
section .lesson-list-content-box{
  width: 840px;
}
section .list-item{
  display: inline-block;
  width: 120px;
  background-color: #fff;
  margin-left: 10px;
}
section .list-item .img-box{
  width: 100%;
  height: 120px;
  border: 1px solid #FcFcFc;
  overflow: hidden;
}
section .list-item .img-box img{
  width: 100%;
  height: 100%;
}
section .list-item-title{
  margin-top: 10px;
  font-size: 12px;
  color: #3B3B3B;
}
section .list-item-ext{
  margin-top: 3px;
  font-size: 12px;
  color: #D69E53;
}
